<% if current_user == user %>
  <div>
    <%= link_to edit_user_path(current_user),class: "btn btn-success mb-1" do%>
      <i class="fas fa-user-edit"><span class="mr-2"></span>編集する</i>
    <% end %>
  </div>
  <div>
    <%= link_to likes_user_path(current_user),class: "btn btn-warning text-dark my-1" do %>
      <i class="fas fa-star"><span class="mr-2"></span>お気に入り一覧</i>
    <% end %>
  </div>
<% end %>