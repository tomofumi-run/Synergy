<% users.each do |user|%>
  <div class="col-xs-12 col-md-6 col-lg-3">
    <div class="card" style="width: 18rem;">
      <%= attachment_image_tag(user, :profile_image,fallback: "no_image.png",class:"card-img-top")%>
        <div class="card-body">
          <h5 class="card-title">
            <%= link_to user_path(user) do%>
              <%= full_name(user)%>
            <% end %>
          </h5>
          <p class="card-text"><%= user.prefecture_name%></p>
          <p class="card-text"><%= user.history_status%></p>
        </div>
    </div>
  </div>
<% end %>