<% posts.each do |post|%>
  <div class="col-xs-12 col-md-6 col-lg-3">
    <div class="card my-2" style="width: 15rem; ">
      <%= link_to post_path(post) do%>
        <%= attachment_image_tag(post, :post_image,size:"250x200",fallback: "no_image.png",class:"card-img-top")%>
      <% end %>
      <div class="card-body">
          <div class="border-bottom pb-2">
            <h5 class="card-title font-weight-bold"><%= post.title%></h5>
            <span>カテゴリー :<p class="btn btn-info btn-sm mt-2 ml-2"><%= post.genre.name %></p></span>
          </div>
            <p class="d-inline">from:<%= full_name(post.user)%></p>
        </div>
    </div>
  </div>
<% end %>