<div class="form-group my-2">
  <%= f.label :"カテゴリーを選んでください" %>
  <%= f.collection_select :genre_id, Genre.all, :id, :name,{ prompt: "選択してください" }, class: "form-control" %>          
</div>
      
<div class="form-group my-2">
  <%= f.label :"タイトル" %>
  <%= f.text_field :title,placeholder:"25文字以内",class: "form-control"%>         
</div>
      
<div class="form-group my-2">
  <%= f.label :"本文" %>
  <%= f.text_area :content,'data-provider': :summernote,class:"form-control"%>
</div>  