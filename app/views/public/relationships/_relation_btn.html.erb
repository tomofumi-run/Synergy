<% unless current_user == user %> 
  <% if current_user.following?(user) %>
    <%= link_to "フォローを外す", user_relationships_path(user), method: :delete,remote: true, id: "unfollow", class: "btn btn-primary" %>
  <% else %>
    <%= link_to "フォローする", user_relationships_path(user), method: :post,remote: true, id: "follow", class: "btn btn-success" %>
  <% end %>
<% end %>