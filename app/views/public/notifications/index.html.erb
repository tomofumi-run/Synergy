<% provide(:title, "通知一覧")%>
<h3 class="page-title text-center">通知</h3>
  <div class="row">
    <div class="col-xs-12 col-md-10 mx-auto">
          <%= link_to  user_notifications_path,class:"text-dark", method: :delete do %>
            <i class="fas fa-trash"><span class="mr-2"></span>全削除</i>
          <% end %>
        <hr>
        <% if @notifications.exists? %>
          <div class="my-2">
            <%= render "public/notifications/index", notifications: @notifications %>
          </div>
        <% else %>
          <p>通知はありません</p>
        <% end %>
    </div>
  </div>
