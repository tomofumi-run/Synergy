<% if post.liked_by?(current_user) %>
  <%= link_to "#{ post.likes.count }", post_likes_path(post), method: :delete, remote: true, class: "fas fa-star",style:"color:#DAA520" %>
<% else %>
  <%= link_to "#{ post.likes.count }", post_likes_path(post), method: :post, remote: true, class: "far fa-star", style:"color: black"%>
<% end %>