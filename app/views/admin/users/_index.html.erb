<% users.each do |user|%>
  <div class="col-xs-12 col-md-6 col-lg-3">
    <div class="card" style="width: 18rem;">
      <%= link_to admin_user_path(user) do%>
        <%= attachment_image_tag(user, :profile_image,size:"200x250",fallback: "no_image.png",class:"card-img-top")%>
      <% end %>
      <div class="card-body">
        <h5 class="card-title">
          <%= full_name(user) %>
        </h5>
        <% if user.is_deleted === true %>
          <p class="card-text text-danger">退会済</p>
        <% else %>
          <p class="card-text text-success">有効</p>
        <% end %>
      </div>
    </div>
  </div>
<% end %>