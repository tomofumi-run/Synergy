<% posts.each do |post|%>
  <div class="col-xs-12 col-sm-6 col-lg-3">
    <div class="card my-2 mx-1" style="width: 15rem;">
      <%= link_to admin_post_path(post) do%>
        <%= attachment_image_tag(post, :post_image,fallback: "no_image.png",class:"card-img-top")%>
      <% end %>
      <div class="card-body">
          <h5 class="card-title font-weight-bold border-bottom"><%= post.title%></h5>
          <p class="card-text">from:<%= full_name(post.user)%></p>
        </div>
    </div>
  </div>
<% end %>