<% provide(:title, "ログイン")%>
<div class="container">
  <h3 class="text-center page-title">管理者ログイン</h3>
  <div class="row">
      <div class="col-6 offset-3">
      <h6 class="my-3">管理者の方はこちらからログイン</h6>
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>
        <div class="field my-2">
          <%= f.label :"メールアドレス" %><br />
          <%= f.email_field :email, autofocus: true, placeholder:"例）kaeru@example.com", autocomplete: "email",class:"form-control" %>
        </div>
          <div class="field my-2">
            <%= f.label :"パスワード" %><br />
            <%= f.password_field :password, placeholder:"例）xxxxxx", autocomplete: "current-password",class:"form-control" %>
          </div>
          <div class="my-3 text-center">
            <%= f.submit "ログイン",class: "btn btn-primary mr-2"%>
            <%= link_to "会員ページへ移動", root_path, class:"btn btn-success ml-2" %>
          </div>
        <% end %>
      </div>
  </div>
</div>
