<header class="shadow-sm sticky-top">
  <nav class="navbar navbar-expand-lg navbar-light">
    <div class="container">
    <% if admin_signed_in?%>
      <%= link_to admin_posts_path do%>
        <%= image_tag 'logo.png', size: "100x100" %>
      <% end %>
    <% else%>
      <%= link_to root_path do%>
        <%= image_tag 'logo.png', size: "100x100" %>
      <% end %>
    <% end %>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-exppanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNavDropdown">
        <ul class="navbar-nav ml-auto">
        <% if user_signed_in?%>
          <%= render "layouts/user_header"%>
        <% elsif admin_signed_in? %>
          <%= render "layouts/admin_header"%>
        <% else %>
          <li class="nav-item">
            <%= link_to"About", about_path,class: 'nav-link text-dark'%>
          </li>
          <li class="nav-item">
            <%= link_to"Signup", new_user_registration_path,class: 'nav-link text-dark'%>
          </li>
          <li class="nav-item">
            <%= link_to"Login", new_user_session_path,class: 'nav-link text-dark'%>
          </li>
        <% end %>
        </ul>
      </div>
    </div>
  </nav>
</header>